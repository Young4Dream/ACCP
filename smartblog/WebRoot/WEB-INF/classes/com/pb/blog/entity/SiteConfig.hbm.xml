<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.pb.blog.entity">

    <class name="SiteConfig" table="BLOG_SITE_CONFIG" dynamic-update="true">
		<id name="id" unsaved-value="null" type="java.lang.String" length="32">
			<generator class="uuid"/>
		</id>
		<property name="siteName" type="string" length="255"/>
		<property name="siteAbout" type="text"/>

    </class>
    
</hibernate-mapping>